{
  "compilerOptions": {
    "module": "ES2020",
    "target": "es2020",
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": false
  },
  "include": [
    "src/*.ts",
    "src/**/*.ts",
    "global.d.ts"
  ],
  "exclude": ["node_modules", "__tests__", "dist"]
}

{
  "compilerOptions": {
    "module": "ES2020",
    "target": "es2020",
    "outDir": "dist",
    "rootDir": ".",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": false
  },
  "include": ["*.ts", "rules/**/*.ts"],
  "exclude": ["node_modules", "__tests__", "dist"]
}
